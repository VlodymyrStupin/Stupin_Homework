<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
             version="2.0">
    <persistence-unit name="jdbc-hiber">
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
        <class>ua.stupin.analyticCentre.entities.Device</class>
        <class>ua.stupin.analyticCentre.entities.Subscriber</class>
        <class>ua.stupin.analyticCentre.entities.Tariff</class>
        <class>ua.stupin.analyticCentre.entities.Activity</class>
        <properties>
            <property name="hibernate.dialect" value="org.hibernate.dialect.MariaDBDialect"/>
            <property name="hibernate.connection.driver_class" value="org.mariadb.jdbc.Driver"/>
            <property name="hibernate.connection.url" value="jdbc:mariadb://127.0.0.1:3306/analytic_system"/>
            <property name="hibernate.connection.username" value="root"/>
            <property name="hibernate.connection.password" value="123456"/>
            <property name="hibernate.hbm2ddl.auto" value="validate"/>
        </properties>
    </persistence-unit>
</persistence>